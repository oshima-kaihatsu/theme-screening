# 本番環境用環境変数設定
# Production Environment Variables for Theme Screening App

# Flask設定
FLASK_ENV=production
FLASK_APP=theme_web_app.py

# セキュリティ
SECRET_KEY=your-production-secret-key-here

# データベース設定（必要に応じて）
# DATABASE_URL=postgresql://user:password@localhost/theme_screening

# API設定
# Yahoo Finance APIは無料なので特に設定不要

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/tmp/theme_screening.log

# キャッシュ設定
CACHE_TIMEOUT=300

# スクリーニング設定
DEFAULT_MIN_CHANGE_PCT=5.0
MAX_STOCKS_TO_ANALYZE=500
MATERIAL_RESEARCH_TIMEOUT=1800

# ホスト設定
HOST=0.0.0.0
PORT=5001

# タイムゾーン
TIMEZONE=Asia/Tokyo

# セッション設定
SESSION_TIMEOUT=3600